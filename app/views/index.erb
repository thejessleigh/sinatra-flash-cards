<div class ="left_container">
  <%unless @user %>
    <h1  class="slide">Learn fast. Learn fresh. Learn funky.</h1>
    <% if  session[:status] == "logged in" %>
      <p> Welcome, user # <%= session[:user_id] %> </p>
    <% end %>
    <br><br>

    <form action="/user/login" method="get">
      <label for="user_name">Username:</label><br>
      <input type="text" class="required" name="user[user_name]" id="user_name" autofocus><br>
      <label for="password">Password:</label><br>
      <input type="password" class="required" name="user[password]" id="password"><br>
      <p class="submit">
        <input type="submit" value="submit" class="submit">
      </p>
    </form><br><br>
    <div class="bottom">
      <a href="/user/create" class ="sign_up">Sign Up</a>
    </div>
  <%else%>
    <div class="bottom">
      <h1 class="slide"><%=@user.user_name%>, are you ready for some funky fun?!</h1>
      <a href ="/decks">Available decks</a>
      <a href ="/user/profile">Profile</a>
      <a href="/decks/create">Create Deck</a>
    </div>
  <%end%>
</div>

<a href="/user/logout">Log Out</a><br>

<h1><%= session[:deck_title]%></h1>
  <%if session[:previous_answer]%>
    You got the last one right!
  <%elsif session[:previous_answer] == false%>
    You got the last one wrong!
  <%end%>




<%unless @card%>
  <p>That was your last question!!!!</p>
  <a href="/round/stats">See Your Game Stats</a>
<%else%>
  <h3>Question:</h3>
  <p><%= @card.question%>
  <form id ="question" action = '/card/answer/<%=@card.id%>' method="post">
    <label for="answer">Answer:</label><br>
    <input type="text" name="answer" id="answer">
    <input type="text" name="correct" value="<%=@card.answer%>" style = "display:none;">
    <input type="submit" value="submit">
  </form>

<%end%>

